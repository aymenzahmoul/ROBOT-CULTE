{% extends 'base.html.twig' %}

{% block title %}Donateur index{% endblock %}

{% block body %}
    <h1>Donateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donateur in donateurs %}
            <tr>
                <td>{{ donateur.id }}</td>
                <td>{{ donateur.nom }}</td>
                <td>{{ donateur.prenom }}</td>
                <td>{{ donateur.adresse }}</td>
                <td>{{ donateur.email }}</td>
                <td>{{ donateur.role }}</td>
                <td>
                    <a href="{{ path('app_donateur_show', {'id': donateur.id}) }}">show</a>
                    <a href="{{ path('app_donateur_edit', {'id': donateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_donateur_new') }}">Create new</a>
{% endblock %}
